<!DOCTYPE html>
<html lang="en">

<head>
    {{>header}}
    <title>Login</title>
</head>

<body>
    {{>navbar}}
    <div class="login-signup-container">
        <img src="assets/login.jpg" class="login-img" alt="img=hero">
        <div class="login-form">
            <img class="lock-user-img" src="assets/lockuser.jpg" alt="img">
            <form action="/login" method="POST">
                <div class="login-form-inp">
                    <div class="input-div">
                        <i class="fa fa-envelope icon"></i>
                        <input name="email" type="email" id="email"
                            placeholder="Email here..">
                    </div>
                    <div class="input-div">
                        <i class="fa fa-key icon"></i>
                        <input name="password" type="password" id="password-login" placeholder="Password">
                    </div>

                </div>
                <div class="para-parent">
                    <button class="login-btn" type="submit">Login</button>
                    <p class="para-login">No account? &nbsp; <a href="/registration">Register here</a></p>
                </div>
            </form>
        </div>
    </div>
</body>

</html>